<Page x:Class="School_Journal_App_VSProject.blocks.BJournal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School_Journal_App_VSProject.blocks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BJournal">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <Label Name="Text" Grid.Row="0" Grid.Column="0" Content="Добро пожаловать! Выберите журнал" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" />
        <DataGrid Name="JournalList" Grid.Row="1" HorizontalAlignment="Stretch" CanUserAddRows="False" VerticalAlignment="Stretch" BeginningEdit="JournalList_BeginningEdit" CellEditEnding="JournalList_CellEditEnding" />
    </Grid>
</Page>
