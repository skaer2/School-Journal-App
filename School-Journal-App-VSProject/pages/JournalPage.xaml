<Page x:Class="School_Journal_App_VSProject.pages.JournalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School_Journal_App_VSProject.pages"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="640"
      Title="JournalPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="3*" Name="Groups" />
                <RowDefinition Height="3*" Name="List"/>
            </Grid.RowDefinitions>

            <Frame Name="ProfileBlock" Grid.Row="0" NavigationUIVisibility="Hidden" Margin="5" />
            <Frame Name="GroupsBlock" Grid.Row="1" NavigationUIVisibility="Hidden" />
            <Frame Name="SubjectsBlock" Grid.Row="2" NavigationUIVisibility="Hidden" />
        </Grid>

        <Frame Name="JournalBlock" Grid.Column="1" NavigationUIVisibility="Hidden" />
    </Grid>
</Page>
